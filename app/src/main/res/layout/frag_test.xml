<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp">

        <!-- Текст вопроса -->
        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginTop="50dp"
            android:text="Текст вопроса"
            android:textColor="@color/black"/>



        <!-- Варианты ответа -->
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вариант A"
                android:textSize="20sp"
                android:layout_margin="10dp"

                />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вариант B"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вариант C"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_margin="10dp"/>

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вариант D"
                android:visibility="gone"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

        </RadioGroup>
        <!-- Изображение вопроса, если есть -->
        <ImageView
            android:id="@+id/questionImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <!-- Кнопка для снятия выбора -->
        <Button
            android:id="@+id/clearSelectionButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Снять выбор"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>